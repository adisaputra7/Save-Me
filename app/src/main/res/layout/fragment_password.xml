<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nurhadis.SaveMe.FragmentPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="23sp"
            android:text="Password"
            android:textColor="#FFF"
            android:gravity="center"
            android:paddingTop="14dp"
            android:background="#0288D1"
            android:paddingBottom="14dp"/>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/ic_event_passwordblack" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Password"
                android:paddingTop="26dp"
                android:layout_marginStart="25dp"
                android:textColor="#000"
                android:textSize="22sp"
                />
        </android.support.v7.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/setPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textColor="#757575"
            android:hint="Enter old password"
            android:backgroundTint="#757575"
            android:inputType="textPassword" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/ic_event_passwordblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:paddingTop="26dp"
                android:layout_marginStart="25dp"
                android:textColor="#000"
                android:textSize="22sp"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/setNewPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textColor="#757575"
            android:hint="Enter new password"
            android:backgroundTint="#757575"
            android:inputType="textPassword" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/ic_event_passwordblack" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-type password"
                android:paddingTop="26dp"
                android:layout_marginStart="25dp"
                android:textColor="#000"
                android:textSize="22sp"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/setRetypePassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textColor="#757575"
            android:hint="Re-type new password"
            android:backgroundTint="#757575"
            android:inputType="textPassword" />

        <Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="190dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:background="#0288D1"
            android:gravity="center"
            android:text="Save"
            android:textColor="#FFF"
            android:textSize="22sp" />

    </LinearLayout>

    </ScrollView>

</FrameLayout>