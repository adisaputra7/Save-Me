<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nurhadis.SaveMe.Fragment.FragmentProfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="23sp"
            android:text="Profile"
            android:textColor="#FFF"
            android:gravity="center"
            android:paddingTop="14dp"
            android:background="#0288D1"
            android:paddingBottom="14dp"/>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/ic_account_usertblack" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:paddingTop="26dp"
                android:layout_marginLeft="25dp"
                android:textColor="#000"
                android:textSize="22sp"
                />
        </android.support.v7.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/setName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textColor="#757575"
            android:backgroundTint="#757575"
            android:hint="Input name here!"
            android:inputType="textPersonName" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/ic_event_emailblack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:paddingTop="26dp"
                android:layout_marginStart="25dp"
                android:textColor="#000"
                android:textSize="22sp"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <EditText
            android:id="@+id/setEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:textColor="#757575"
            android:backgroundTint="#757575"
            android:hint="example@email.com"
            android:inputType="textEmailAddress" />


        <Button
            android:id="@+id/btnSave"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="#0288D1"
            android:gravity="center"
            android:text="Save"
            android:textColor="#FFF"
            android:textSize="22sp" />

    </LinearLayout>

    </ScrollView>

</FrameLayout>